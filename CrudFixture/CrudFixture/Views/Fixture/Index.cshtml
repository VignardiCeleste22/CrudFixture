@model IEnumerable<CrudFixture.Models.Fixture>



@{
    ViewData["Title"] = "Fixture Racing Campeón 2018-2019";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/56/Escudo_de_Racing_Club_%282014%29.svg/165px-Escudo_de_Racing_Club_%282014%29.svg.png" style="margin-left:-315px; position:fixed" />

<div class="container">

    <div class="row" style="padding:30px">

        <div class="col-sm-6">
            <h2>Fixture de Racing Club 2018-2019</h2>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Fixture"> Agregar Fechas </a>
        </div>

    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class=" table table-bordered table-striped">
                <thead>
                    <tr style="background-color: #A9CCE3 ">
                        <td>@Html.DisplayNameFor(m => m.Fecha) </td>
                        <td>@Html.DisplayNameFor(m => m.Local) </td>
                        <td>@Html.DisplayNameFor(m => m.Visitante) </td>
                        <td>@Html.DisplayNameFor(m => m.Estadio) </td>
                        <td>@Html.DisplayNameFor(m => m.Dia) </td>
                        <td>@Html.DisplayNameFor(m => m.Resultado) </td>
                        <td>Acciones</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr style="background-color: #E5E7E9 ">
                            <td>@item.Fecha</td>
                            <td>@item.Local</td>
                            <td>@item.Visitante </td>
                            <td>@item.Estadio</td>
                            <td>@item.Dia</td>
                            <td>@item.Resultado </td>
                            <td style="padding-left:2%; width:12rem; justify-items:center">
                                <a asp-controller="Fixture" asp-action="Edit" asp-route-id="@item.Id" class=" btn" style="background-color: #ABEBC6"> Editar</a>
                                <a asp-controller="Fixture" asp-action="Delete" asp-route-id="@item.Id" class=" btn" style="background-color: #F1948A "> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p> No se encuentran Registros</p>
        }
    </div>
</div>


